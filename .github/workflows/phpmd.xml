<?xml version="1.0"?>
<ruleset name="Custom PHPMD Rules">
    <description>Custom rules for PHP Mess Detector</description>

    <!-- Include default PHPMD rules -->
    <rule ref="rulesets/codesize.xml"/>
    <rule ref="rulesets/controversial.xml"/>
    <rule ref="rulesets/design.xml"/>
    <rule ref="rulesets/naming.xml"/>
    <rule ref="rulesets/unusedcode.xml"/>

    <!-- Customize TooManyPublicMethods limit -->
    <rule ref="CodeSizeRules/TooManyPublicMethods">
        <properties>
            <property name="maxmethods" value="35"/>
        </properties>
    </rule>
</ruleset>
